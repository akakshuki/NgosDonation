@using System.Web.Mvc.Html
@using WebMvc.Common
@using WebMvc.Models.ModelView
@model WebMvc.Models.ModelView.PartnerDTO
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<section class="panel">
    <h1 class="panel-heading">
        Edit Partner
    </h1>
    <form action="@Url.Action("Edit")" method="POST" enctype="multipart/form-data">
        <div class="panel-body">
            <div class="position-center">
                <div class="form-group">
                    <label for="">Partner Name:</label>
                    <input type="text" class="form-control" value="@Model.PartnerName" name="PartnerName" maxlength="200" required>
                </div>
                <div class="form-group">
                    <label for="">Partner Link:</label>
                    <input type="text" class="form-control" value="@Model.PartnerLink" name="PartnerLink" maxlength="200" required>
                </div>
                <div class="form-group">
                    <label for="">Image Partner:</label>
                    <div id="frameImg">
                        <img src="~/FileImage/@Model.PartnerImage" id="showImg" style="width:300px;height:250px;" />
                    </div>
                    <input type="file" name="FileImage" id="selectImg" accept=".png,.jpg" >
                </div>
                <div class="form-group">
                    <label for="">Active:</label>
                    <input type="checkbox" id="cbActive" style="width:20px;height:20px;" checked />
                    <input type="hidden" name="PartnerActive" id="cbActiveValue" value="@(Model.PartnerActive==true?"True":"False")" />
                </div>
                <button type="submit" name="submit" class="btn btn-info" id="btnSubmit">Save</button>
            </div>
        </div>
    </form>
</section>
<a href="@Url.Action("Index")" class="btn btn-sm btn-primary" style="font-size:20px;float:left;margin-top:20px;">
    <i class="fa fa-arrow-left"></i>  List Partner
</a>
@section scripts{

    <script>
        $(function () {
            if ($('#cbActiveValue').val() == "True") {
                $("#cbActive").prop("checked", true);
            }
            $("#cbActive").change(function () {
                $("#cbActive").is(":checked") ? $("#cbActiveValue").val("True") : $("#cbActiveValue").val("False");
            })
            $('#selectImg').change(function (event) {
                var tmppath = URL.createObjectURL(event.target.files[0]);
                $('#showImg').fadeIn("fast").attr("src", tmppath);
            })
        });
    </script>
}

