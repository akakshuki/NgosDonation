@using System.Web.Mvc.Html
@using WebMvc.Common
@using WebMvc.Models.ModelView
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var lsNew = ViewBag.newQ;
    var lsReply = ViewBag.reply;
}
@section scripts
{
    <!-- Page level plugins -->
    <script src="~/Access/Admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Access/Admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/Access/Admin/js/demo/datatables-demo.js"></script>
    <script>
        $(function () {
            var msg1 = '@TempData["success"]';
            var msg2 = '@TempData["error"]';
            if (msg1 != '') {
                alertify.success(msg1); //display notify
            }
            if (msg2 != '') {
                alertify.error(msg2)
            }
        });
    </script>
}
<div class="card shadow mb-4">
    <div class="card-body">
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">List New Questions</a>
                <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">List Question Answered</a>
            </div>
        </nav>
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                <div class="table-responsive" style="padding:20px;">

                    <table class="table table-striped" id="dataTable">
                        <thead>
                            <tr>
                                <th>User Name</th>
                                <th>User Mail</th>
                                <th>Title</th>
                                <th>Date Create</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in lsNew)
                            {
                                <tr>
                                    <td>@item.UserName</td>
                                    <td>@item.UserMail</td>
                                    <td>@item.Title</td>
                                    <td>@item.QuesDateCreate</td>
                                    <td>
                                        <a href="@Url.Action("QuesDetail",new { id=item.ID})" class="btn btn-info">Detail</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
            <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                <div class="table-responsive" style="padding:20px;">
                    <table class="table table-striped" id="dataTable">
                        <thead>
                            <tr>
                                <th>User Name</th>
                                <th>User Mail</th>
                                <th>Title</th>
                                <th>Question Date Create</th>
                                <th>Reply Date Create</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in lsReply)
                            {
                                <tr>
                                    <td>@item.UserName</td>
                                    <td>@item.UserMail</td>
                                    <td>@item.Title</td>
                                    <td>@item.QuesDateCreate</td>
                                    <td>@item.AnswerDateCreate</td>
                                    <td>
                                        <a href="@Url.Action("QuesDetail",new { id=item.ID})" class="btn btn-info">Detail</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
